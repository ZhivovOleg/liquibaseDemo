<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.9.xsd">

  <preConditions onFail="HALT" onError="HALT">
    <dbms type="postgresql" />
  </preConditions>

  <changeSet id="2" author="zhivov_oa_xml" labels="xml_create_table">
    <createTable tableName="test_xml">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <comment>
      xml create table
    </comment>
    <rollback>
        DROP TABLE test_xml;
    </rollback>
  </changeSet>

  <!-- в формате XML невозможно указать tag как часть changeset'а, только отдельным changeset'ом -->
  <changeSet id="10" author="zhivov_oa_xml" labels="xml_tag_db">
    <tagDatabase tag="xml_tag"/>
  </changeSet>
</databaseChangeLog>